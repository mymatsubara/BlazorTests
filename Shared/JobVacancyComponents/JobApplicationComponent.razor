@namespace BlazorTest.Shared.JobVacancyComponents

<h3 class="mb-4">Job Application</h3>
<div class="row">
    <div class="col-sm-6 h5">Application Date</div>
    <div class="col-sm-4">@JobApplication?.ApplicationDate.ToString("MM-dd-yyyy")</div>
</div>
<div class="row">
    <div class="col-sm-6 h5">Description</div>
</div>
<div class="row mb-3">
    <div class="col-sm-10">@JobApplication?.Description</div>
</div>

<CandidateComponent Candidate="@JobApplication?.Candidate" />

@code {
    [Parameter]
    public JobApplication JobApplication { get; set; }
}
